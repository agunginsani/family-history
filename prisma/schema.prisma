// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  gender    String
  dob       DateTime
  createdAt DateTime  @default(now())
  sessions  Session[]
  role      Role      @relation(fields: [roleId], references: [id])
  roleId    String
}

model Session {
  token     String   @unique
  user      User     @relation(fields: [email], references: [email])
  email     String
  browser   String
  device    String
  os        String
  createdAt DateTime @default(now())
}

model Role {
  id       String     @id @default(uuid())
  name     String
  roleMenu RoleMenu[]
  user     User[]
}

model Menu {
  id       String     @id @default(uuid())
  name     String
  path     String
  roleMenu RoleMenu[]
}

model RoleMenu {
  role   Role   @relation(fields: [roleId], references: [id])
  roleId String
  menu   Menu   @relation(fields: [menuId], references: [id])
  menuId String

  @@unique([roleId, menuId])
}
